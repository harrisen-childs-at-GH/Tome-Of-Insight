<div class="w-screen h-fit flex flex-col justify-center gap-y-10">
<%
=begin%>
 reusable header 
<%
=end%>
 <div class="w-screen flex flex-row border-b border-darkBrown items-center">
    <%= link_to :back, class: "bg-darkBrown p-2 flex flex-row text-white tracking-widest text-2xl " do %>
        <%= heroicon "arrow-left-circle", variant: :outline, options: { class: "w-8 h-8 mr-4 text-white" } %>
        BACK
    <% end %>
    <div class="ml-4 items-center tracking-widest text-2xl ">
        <%= @campaign.name %>
    </div>
 </div>
 
    <div class="justify-items-center w-full ">
    <%= form_with model: [ @campaign, @campaign.locations.build ] do |form| %>
        <div class="justify-items-center w-9/12 h-full mb-4 gap-y-10">
                   <%= form.label :name %>                
                <div class="h-5/6 px-4 mb-8 py-2 bg-white border border-lightBrown rounded-lg dark:bg-gray-800">
                    <%= form.text_area :name,
                        placeholder: "Leave Blank To AutoGenerate",
                        class: "w-full h-full px-0 text-sm text-gray-900 bg-white border-0" %>
                </div>
                    <%= form.label :traits %>
                    <div class="h-5/6px-4 py-2 bg-white border border-lightBrown rounded-lg dark:bg-gray-800">
                    <%= form.text_area :traits,
                        placeholder: "Leave Blank To AutoGenerate",
                        class: "w-full h-full px-0 text-sm text-gray-900 bg-white border-0" %>
                </div>
                <div class="flex items-end justify-end px-3 py-2 dark:border-gray-600">
                    <%= form.submit "GENERATE", class: "inline-flex items-center py-2.5 px-4 text-s font-medium text-center text-white bg-darkBrown rounded-lg focus:ring-4 focus:ring-blue-200 dark:focus:ring-blue-900 hover:bg-lightBrown"%>
                </div>
    </div>
    <% end %>
    </div>
</div>